{
    "tasks": [
        {
            "label": "Remove C++ Exe",
            "command": "rm",
            "args": [
                "-f",
                "$return {workspaceFolder}/.build/${fileBasenameNoExtension}"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: GNU build active file",
            "command": "g++-14",
            "args": [
                "-g",
                // "${file}", // to make it to build any active file
                "${workspaceFolder}/src/c++/main.cpp",
                "-o",
                "${workspaceFolder}/.build/${fileBasenameNoExtension}",
                "-std=c++23",
                "-Wshadow",
                "-Wall",
                "-Wconversion",
                "-Wno-sign-conversion",
                "-Wno-unused-result",
                "-Werror=return-type",
                // "-fsanitize=address",
                // "-fsanitize=undefined",
                "-DLOCAL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Remove C++ Exe"
            ],
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                // "${file}", // to make it to build any active file
                "${workspaceFolder}/src/c++/main.cpp",
                "-o",
                "${workspaceFolder}/.build/${fileBasenameNoExtension}",
                "-std=c++23",
                "-Wshadow",
                "-Wall",
                "-Wconversion",
                "-Wno-sign-conversion",
                "-Wno-unused-result",
                "-Werror=return-type",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-DLOCAL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Remove C++ Exe"
            ],
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}